= form_for @knowledge_piece do |f|
  - if @knowledge_piece.errors.any?
    #error_explanation
      %h2= "#{pluralize(@knowledge_piece.errors.count, "error")} prohibited this knowledge_piece from being saved:"
      %ul
        - @knowledge_piece.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :body
    = f.text_area :body
  .actions
    = f.submit 'Save'
