= form_for @tag do |f|
  - if @tag.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tag.errors.count, "error")} prohibited this tag from being saved:"
      %ul
        - @tag.errors.full_messages.each do |msg|
          %li= msg

  .field.controls
    = f.label :name
    = f.text_field :name, class: "span12"
  .actions
    = f.submit 'Save', class: "btn btn-success"
