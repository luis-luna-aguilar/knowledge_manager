#references_fields.dynamic_nested_fields

  = f.label :url

  .references-items
    = f.nested_fields_for :references do |f|
      
      %fieldset.references-item
        = f.hidden_field :id
        = f.hidden_field :_destroy
        = f.text_field :url, class: "span12"
        %a.references-remove{:href => "#"} remove

  %br

  %a.references-add{:href => "#"} add reference field

