%h2 Knowledge Pieces

.items.dynamic_nested_fields
  = f.nested_fields_for :knowledge_pieces do |f|
    
    %fieldset.item
      = f.label :title
      = f.text_field :title, class: "span12"
      = f.label :body
      = f.text_area :body, class: "span12 redactor-component"
      %p.hint= "Use Ctrl+C to add an inline code tags snippet, use Ctrl+P for a multiline one."
      %br
      %a.remove{:href => "#"} remove
      = f.hidden_field :id
      = f.hidden_field :_destroy

%br

%a.add{:href => "#"} add knowledge piece