%h2 Knowledge Pieces

#knowledge_pieces_fields.dynamic_nested_fields

  .items
    = f.nested_fields_for :knowledge_pieces do |f|
      
      %fieldset.item
        = f.label :title
        = f.text_field :title, class: "span12"
        = f.label :body
        = f.text_area :body, class: "span12 redactor-component"
        %p.hint= "Use Ctrl+C to add an inline code tags snippet"
        %br
        %a.remove{:href => "#"} remove
        = f.hidden_field :id
        = f.hidden_field :_destroy

  %a.add{:href => "#"} add knowledge piece
